<%= form_for(@post) do |f| %>
  <%= render 'common/errors', object: @post %>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </div>
  <div class="field"> <!-- делаем чек-бокс для галки "опубликован"  -->
    <%= f.label :published, 'Опубликован' %><br>
    <%= f.check_box :published  %>
  </div>
  <!-- Указываем список категорий -->
  <div class="field">
    <%= f.label :category_ids, 'Категории'  %><br>
    <%= f.collection_select :category_ids, Category.all, :id, :body, {}, {multiple: true} %>  
    <!-- :category_ids - у поста есть данный массив, где хранятся id категорий -->
  </div>
  
  <div class="actions">
    <%= f.submit t('.submit', action: @post.new_record? ? t('common.create') : t('common.update')) %>
  </div>
<% end %>
