<%= form_for([:admin, @category]) do |f| %>
  <%= render 'common/errors', object: @category %>

  <div class="field">
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </div>
  <div class="actions">
   <%= f.submit t('.submit', action: @category.new_record? ? t('common.create') : t('common.update')) %>
  </div>
<% end %>
