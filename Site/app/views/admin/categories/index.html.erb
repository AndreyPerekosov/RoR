<h1>Категории</h1>

<table>
  <thead>
    <tr>
      <th><%= t('common.body')%></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.body %></td>
        <%= link_to t('common.show'), [:admin, category]%> </td> 
        <td><%= link_with_icon :pencil, edit_admin_category_path(category), title: t('common.edit') %></td> <!-- здесь в явном виде не указывам, т.к. в роутинге есть префикс - используем хэлпер -->
        <td><%= link_with_icon 'o-trash', [:admin, category], title: t('common.delete'), method: :delete, data: { confirm: t(:sure) } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Новая категория', new_admin_category_path %>
