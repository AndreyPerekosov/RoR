<h1>Список постов</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <!-- Выводим список категорий строчно, через запятую -->
    <p> <b>Категории:</b>
    <%= post.categories.pluck(:body).join(', ') %>
    </p>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.body %></td>
        <td><%= link_to 'Show', [:admin, post] %></td>
        <td><%= link_with_icon, :pencil, edit_admin_post_path(post), title: t('common.edit') %></td>
        <td><%= link_with_icon 'o-trash', [:admin, post], title: t('common.delete'), method: :delete, data: { confirm: 'Are you sure?' }%></td>
      </tr>
    <% end %>
  </tbody>
</table>



