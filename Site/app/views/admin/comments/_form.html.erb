<%hidden = false unless local_assigns[:hidden]%>
<%= form_for [:admin, comment], html: {style: "display: #{hidden ? 'none' : 'block' }"} do |f| %>
  <%= render 'common/errors', object: comment %>

  <div class="field">
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>